<div class="item">
  <div class="card mb-3 stacked--left" style="max-width: 540px; max-height: 170px">
    <div class="row no-gutters">
      <div class="col-md-4">
        <%= link_to product_path(@product) do %>
          <%= cl_image_tag @product.photo.key, width: 180, height: 169, crop: :fill, class:'product-image' %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
          <%= link_to product_path(@product) do %>
            <%= @product.name %><span class="price-span"><%= number_to_currency(@product.price) %></span>
          <% end %></h5>
          <p class="card-text description mt-3">
          <%= link_to product_path(@product) do %>
            <%= @product.content %></p>
          <% end %>
          <div class="add-to-cart d-flex justify-content-between">
            <p class="card-text" style="color:red; font-weight:600"><%= link_to sampler_path(@product), class: "btn btn-outline-danger" do %>Try Now!</p><% end %></small></p>
            <td>
            <p><small class="text-muted"><%= button_to line_items_path(:product_id => @product.id), class: "btn btn-success" do %>
                Add to cart
            <% end %></small></p>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




