<div class="products-wrapper">
  <div class="banner img-fluid container" style="max-width: 100%; height: auto;">
    <h1 class="products-title mb-5">ALL PRODUCTS</h1>
  
    <div class="card-product">
      <%= render 'shared/card_product' %>
      <div class="bg">
        <% @products.each do |product| %>
          <%= cl_image_tag product.photo.key, crop: :fill, class:'img' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="cart">
  <%= render 'carts/cart' %>
</div>